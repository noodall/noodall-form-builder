<%= form_for form_response, :as => 'form_response', :url => noodall_form_form_responses_path(form.id), :html => { :class => ('default-values' if params[:response].blank?) } do |f| %>
<%= f.hidden_field :referrer %>
<h2><%= form.title %></h2>
<p class="form-info"><span class="required">*</span> Required</p>
    <%= error_messages_for :object => form_response %>
<%    for field in form.fields %>
      <fieldset class="<%= field_type(field) %>">
        <%= render :partial => "noodall/form_responses/fields/#{field_type(field)}", :locals => {:form_response => form_response, :f => f, :field => field} %>
      </fieldset>
<%   end %>
      
      <fieldset class="form-actions">
        <%= f.submit "Submit", :name => 'submit', :id => "form-submit" %>
        <%= f.submit "Reset Form", :name => 'reset', :type => 'reset', :id => "form-reset" %>        
      </fieldset>
      
<%  end %>