<div id="download-progress">
  <script>
  $(function() {
    var poll = setInterval(function(){
      $.ajax({
        url: '<%= noodall_admin_download_check_path(@download) %>',
        success: function(data){
          if(data['ready'] == true) {

            // Stop polling
            clearInterval(poll);
            poll = null;

            // Update the page
            $('#download-progress').hide();
            $('#download-ready').show();
          }
        }
      });
    }, 5000);
  });
  </script>

  <p class="download-title">Your download is being generated, this page will refresh automatically.</p>

  <%= image_tag 'admin/progress.gif', :class => "download-progress" %>

</div>

<div id="download-ready">
  <p class="download-title">
    Your CSV file is ready
    <br /><br />
    <%= link_to "Download your CSV", noodall_admin_download_path(@download) %>
  </p>
</div>

